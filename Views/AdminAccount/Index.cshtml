@model IEnumerable<Homepage.Models.TAIKHOANQUANTRIVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
</head>
<body>
    <br />
    <h3 class="text-center">DANH SÁCH TÀI KHOẢN QUẢN TRỊ VIÊN</h3>
    <p class="btn btn-default" style="margin-left:7%">
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table table-bordered table-hover"  style="margin-left:7%;width:80%">
        <tr>
            <th>
                Tên đăng nhập
            </th>
            <th>
                Tên quản trị viên
            </th>
            <th>
                Ảnh đại diện
            </th>
            <th>Thao tác</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TEN_DANGNHAP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEN_QUANTRIVIEN)
                </td>
                <td>
                    <img src="@item.ANH_DAIDIEN" width="150" height="150" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_QUANTRIVIEN }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_QUANTRIVIEN })
                </td>
            </tr>
        }

    </table>
</body>
</html>
