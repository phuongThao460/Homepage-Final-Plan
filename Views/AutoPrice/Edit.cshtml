@model Homepage.Models.BANGGIA

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h2 class="text-center">CHỈNH SỬA BẢNG GIÁ</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.Label("Mã Sách", new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <select name="ID_SACH">
                @foreach (var item in Model.lsSach)
                {
                    if (item.ID_SACH == Model.ID_SACH)
                    {
                        <option value="@item.ID_SACH" selected>@item.TEN_SACH</option>
                    }
                    else
                    {
                        <option value="@item.ID_SACH">@item.TEN_SACH</option>
                    }

                }
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Ngày áp dụng", new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <input type="date" min="@Model.minDate" name="NGAY_APDUNG" value="@Model.NGAY_APDUNG" />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Giá trị", new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.GIATRI, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GIATRI, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-default" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="btn btn-default">
                @Html.ActionLink("Trở về trang chủ", "Index")
            </div>
        </div>
    </div>
</div>
}

