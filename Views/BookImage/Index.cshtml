@model IEnumerable<Homepage.Models.ANHBIA>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    

    <script src="~/Content/Scripts/AddImage.js"></script>
</head>

<body>
    <style>
        .createBtn {
            padding: 10px 20px 10px 20px;
            border-radius: 10px;
            margin-left: 10%;
            background-color: #0032A0;
            color: white;
            border-style: none;
        }

            .createBtn:hover {
                text-decoration: none;
                background-color: aqua;
                color: black;
            }

        .actionBtn {
            padding: 2px 5px 2px 5px;
            margin-right: 2px;
            border-radius: 5px;
            background-color: #0032A0;
            color: white;
        }

            .actionBtn :hover {
                text-decoration: none;
                background-color: aqua;
                color: black;
            }
    </style>
    <br/>
    <h4 class="text-center">Quản lý ảnh</h4>
    <p>

        @Html.ActionLink("Thêm ảnh", "UploadImages", new { controller = "BookImage", action = "Index", id = ViewBag.Id }, htmlAttributes: new { @class = "createBtn" })
    </p>
    <br/>
    <table class="table table-bordered table-hover" style="margin-left:10%">
        <tr>
            <th>
                Ảnh
            </th>
            <th>Thao tác</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.ANH)" width="100" height="100" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_ANH }, htmlAttributes: new { @class = "actionBtn" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_ANH }, htmlAttributes: new { @class = "actionBtn" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
