@model Homepage.Models.SACH

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<style>
    .backBtn {
        margin-top:10px;
        background-color: gainsboro;
        color: darkslateblue;
        margin-left: 20px;
        padding: 10px 20px 10px 20px;
    }

        .backBtn:hover {
            background-color: darkslateblue;
            color: white;
            text-decoration: none;
        }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <h3 class="text-center">Thêm sách</h3>
</head>
<body>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    @using (Html.BeginForm())
    {

        <div class="form-horizontal">
            <h4 class="text-center" style="margin-top:20px">Thêm sách</h4>
            <br />

            <div class="form-group">
                @Html.Label("Tên sách", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TEN_SACH, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Loại bìa",  new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LOAI_BIA, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ngày xuất bản", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NGAY_XUATBAN, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Số lượng tồn", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SOLUONG_TON, new { htmlAttributes = new { @class = "form-control",@type = "number" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Số trang", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SO_TRANG, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Kích thước", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KICH_THUOC, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Mô tả", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.MOTA, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nhà xuất bản", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{Html.RenderAction("SelectNXB", "Books"); }
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tác giã", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{Html.RenderAction("SelectTG", "Books"); }
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nhà cung cấp", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{Html.RenderAction("SelectNCC", "Books"); }
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Thể loại", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{Html.RenderAction("SelectTL", "Books"); }
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Khối lượng", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KHOILUONG, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Giá bìa", new { @class = "control-label col-md-2" }))
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GIA_BIA, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Giá bán", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GIA_BAN, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                </div>
            </div>
            @if(ViewBag.ErrorContent != null)
                {
        <div class="form-group">
            <p style="color:red">*{ViewBag.ErrorContent}</p>
        </div>
                }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo" class="btn btn-default center-block"/>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về trang chủ", "Index","Books",htmlAttributes: new { @class = "backBtn" })
    </div>
</body>
</html>
