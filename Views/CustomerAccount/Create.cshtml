            @Html.Label("MÃ KHÁCH HÀNG", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_KHACHHANG, new { htmlAttributes = new { @class = "form-control" } })
