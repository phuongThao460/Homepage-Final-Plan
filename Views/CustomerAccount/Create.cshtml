    <div class="form-group">
        @Html.Label("TÊN ĐĂNG NHẬP", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TEN_DANGNHAP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TEN_DANGNHAP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("MẬT KHẨU", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("ẢNH ĐẠI DIỆN", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img src="~/Content/Images/" id="previewImage" width="350" height="350" />
            <br />
            <input type="file" name="ImageUpload" multiple="multiple" value="Thêm ảnh ..." onchange="ShowImagePreview(this, document.getElementById('previewImage'))" />
            <br />
            @Html.ValidationMessageFor(model => model.ANH_DAIDIEN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("LOẠI TÀI KHOẢN", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ID_LOAITK", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_LOAITK, "", new { @class = "text-danger" })
        </div>
