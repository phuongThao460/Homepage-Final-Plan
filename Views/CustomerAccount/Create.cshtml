<h3 class="text-center">TÀI KHOẢN KHÁCH HÀNG</h3>
@using (Html.BeginForm("Create", "CustomerAccount", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
