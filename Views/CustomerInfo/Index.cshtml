@model IEnumerable<Homepage.Models.THONGTINKHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <br />
    <h3 class="text-center">Quản lý thông tin khách hàng</h3>
</head>
<body>

    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                THÔNG TIN KHÁCH HÀNG
            </th>
            <th>
                TÊN KHÁCH HÀNG
            </th>
            <th>
                EMAIL
            </th>
            <th>
                ĐỊA CHỈ
            </th>
            <th>
                SỐ ĐỊỆN THOẠI
            </th>
            <th>
                TỔNG TIÊU DÙNG
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_TTKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEN_KHACHHANG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL_KHACHHANG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DIACHI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SO_DIENTHOAI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TONG_TIEUDUNG)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_TTKH }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_TTKH })
                </td>
            </tr>
        }

    </table>
    </body>
</html>
