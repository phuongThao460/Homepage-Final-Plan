@model Homepage.Models.CHITIETDONHANG
    <br/>
    <div style="        border-style: solid;
        border-width: 1px;
        border-radius: 10px;
        padding: 10px 10px 10px 10px;
        margin: 10px 30px 10px 30px;
        border-color:lightslategray
        ">
        <h3 class="text-center"> Thêm chi tiết đơn hàng</h3>
        @using (Html.BeginForm("CreateOrderDetail", "Order"))
        {
            <table class="table table-bordered table-hover" style="margin-left:7%">
                <tr hidden>
                    <td>Mã đơn hàng:</td>
                    <td>@Html.TextBoxFor(model => model.ID_DONHANG, htmlAttributes: new { @readonly = "readonly" })</td>
                </tr>
                <tr>
                    <td>Tên sách:</td>
                    <td>@{Html.RenderAction("SelectBooks", "Order");}</td>
                </tr>
                <tr>
                    <td>Số lượng:</td>
                    <td>@Html.TextBoxFor(model => model.SOLUONG)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Thêm" />
                    </td>
                </tr>
            </table>
        }

    </div>

