@model Homepage.Models.THELOAI

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
</head>
<body>
    <br />
    <h3 class="text-center">Thể loại</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="margin-left:10%">
            <hr />
            <div class="form-group">
                @Html.Label("TÊN THỂ LOẠI", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TEN_THELOAI, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TEN_THELOAI, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <style>
        .backBtn {
            margin-top: 10px;
            background-color: gainsboro;
            color: darkslateblue;
            margin-left: 20px;
            padding: 10px 20px 10px 20px;
        }

            .backBtn:hover {
                background-color: darkslateblue;
                color: white;
                text-decoration: none;
            }
    </style>
    <div>
        @Html.ActionLink("Trở về trang chủ", "Index", "TheLoai", htmlAttributes: new { @class = "backBtn" })
    </div>
</body>
</html>
