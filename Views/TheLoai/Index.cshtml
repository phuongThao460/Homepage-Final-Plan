@model IEnumerable<Homepage.Models.THELOAI>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
</head>
<body>
    <br />
    <h3 class="text-center">Thể Loại</h3>
    <p class="btn btn-default" style="margin-left:7%">
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table table-bordered table-hover" style="margin-left:7%;margin-right:7%">
        <tr>
            <th>
                TÊN THỂ LOẠI
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TEN_THELOAI)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID_THELOAI }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_THELOAI })
                </td>
            </tr>
        }

    </table>
</body>
</html>
