@model IEnumerable<Homepage.Models.THELOAI>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <h3 class="text-center">Thể Loại</h3>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                MÃ THỂ LOẠI
            </th>
            <th>
                TÊN THỂ LOẠI
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_THELOAI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEN_THELOAI)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_THELOAI }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_THELOAI }) |
                </td>
            </tr>
        }

    </table>
</body>
</html>
