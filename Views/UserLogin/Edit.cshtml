@model Homepage.Models.THONGTINKHACHHANG

@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin";
    Layout = "~/Views/Shared/_Book.cshtml";
}
<style>
    .form-group{
        display: flex;
    }
    .control-label {
        font-weight: 500;
    }
</style>
<h2></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>CHỈNH SỬA THÔNG TIN</h4>
    <hr />

    <div class="form-group">
        @Html.Label("Tên Khách Hàng", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.TEN_KHACHHANG, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TEN_KHACHHANG, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Email", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.EMAIL_KHACHHANG, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EMAIL_KHACHHANG, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Địa Chỉ", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Số Điện Thoại", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.SO_DIENTHOAI, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SO_DIENTHOAI, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="justify-content: center;display: flex;width: 727px;padding-top: 20px;">
        <div class="col-md-3    ">
            <input type="submit" value="Save" class="btn btn-success"  style="width: 250px;"/>
        </div>
    </div>
</div>
}
