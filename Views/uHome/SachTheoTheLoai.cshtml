@model IEnumerable<Homepage.Models.SACH>
@using Homepage.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_homepageLayout.cshtml";
}
@{
    int id = int.Parse(Url.RequestContext.RouteData.Values["id"].ToString());
}
<style>
    .container-type {
        font-size: 30px;
        background-color: #6e72fc;
        background-image: linear-gradient(315deg, #6e72fc 0%, #ad1deb 74%);
        color: white;
        text-align: center;
        margin-right: 65px;
        margin-left: 65px;
        height: 48px;
        border-top-right-radius: 15px;
        border-top-left-radius: 15px;
    }
</style>
@{Html.RenderAction("GetTL", "uHome", new { id = id });}
<div class="row-table">
    @foreach (var item in Model)
    {
        <!-- Team member -->
        <div class="product_contener">
            <div class="card">
                <div class="card-body text-center">
                    <div class="image">
                        @foreach (var anh in item.ANHBIAs)
                        {
                            <img src="@Url.Content(anh.ANH)" />
                            break;
                        }
                    </div>
                    <div class="productname" style="overflow: hidden">
                        @Html.ActionLink(@item.TEN_SACH, "Details", new { id = item.ID_SACH })

                    </div>
                    <div class="author-name">
                        <p class="card-text">@{Html.RenderAction("GetNameTG", "uHome", new { id = item.ID_TACGIA });}</p>
                    </div>
                    <div class="price">
                        <p class="money">@string.Format("{0:#,##0.##}", item.GIA_BAN)</p>
                    </div>

                </div>
            </div>
        </div>
        <!-- ./Team member -->
    }
</div>
